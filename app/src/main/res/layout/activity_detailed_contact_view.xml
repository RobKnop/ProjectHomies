<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="100dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    tools:context=".DetailedContactView">
        <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/contactPhotoID"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First + Last"
        android:id="@+id/nameID"
        android:layout_alignTop="@+id/contactPhotoID"
        android:layout_toEndOf="@+id/contactPhotoID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/editText"
        android:layout_below="@+id/nameID"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/nameID"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Company"
        android:id="@+id/companyID"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nameID"
        android:layout_marginStart="40dp" />
</RelativeLayout>

